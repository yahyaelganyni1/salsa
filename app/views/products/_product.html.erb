<div id="<%= dom_id product %>">
  <div class="">
    <%= image_tag product.image, alt: 'icon',  class: "card-img-top img-fluid rounded d-block product-img" %>
    <h5 class = "text-center card-title">
      <%= link_to product.name, product, clss:"link-dark " %>
    </h5>
    <p class="card-text text-center">
      <%= product.description %>
    </p>
    <p class="text-muted text-center">
      <%= product.price %>$
    </p>
  </div>
  <%= form_with(model: product) do |form| %>
    <%= form.check_box :card, onchange: "this.form.submit();" %>
  <% end %>
</div>
